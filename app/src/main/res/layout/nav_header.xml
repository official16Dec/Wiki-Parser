<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_gradient_bg"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_head_imag"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/whiteColor"
        android:src="@drawable/default_user" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/nav_head_name"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_head_imag"
        android:text="Guest User"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_head_contact"
        android:layout_toEndOf="@id/nav_head_imag"
        android:textColor="@color/black"
        android:layout_marginLeft="32dp"
        android:textSize="14sp"
        android:text="+91 70247 XXXXX"
        android:layout_below="@id/nav_head_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</RelativeLayout>
